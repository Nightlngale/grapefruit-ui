{
  "name": "grapefruit-ui",
  "description": "simple, lightweight, and configurable library with layout components",
  "version": "0.4.0",
  "private": false,
  "author": "Yevhenii Moroziuk <kemd99@gmail.com>",
  "license": "MIT",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Nightlngale/grapefruit-ui.git"
  },
  "keywords": [
    "react",
    "layout",
    "flex",
    "flex-layout",
    "ui"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:minify": "cross-env NODE_ENV=production rollup -c",
    "test": "jest --no-cache",
    "test:cov": "jest --no-cache --coverage",
    "prettier:check": "prettier --check \"*/**/*.{ts,tsx}\" --loglevel=warn",
    "prettier:fix": "prettier --write \"src/**/*.{ts,tsx}\"",
    "eslint:check": "eslint . --ext .ts,.tsx",
    "eslint:fix": "eslint --ext .ts,.tsx src --fix",
    "code-quality:check": "npm run prettier:check && npm run eslint:check",
    "code-quality:fix": "npm run prettier:fix && npm run eslint:fix"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "22.0.0",
    "@rollup/plugin-node-resolve": "13.3.0",
    "@rollup/plugin-typescript": "8.3.2",
    "@types/jest": "27.5.1",
    "@types/node": "16.11.33",
    "@types/react": "17.0.2",
    "@types/react-dom": "17.0.2",
    "@typescript-eslint/eslint-plugin": "5.37.0",
    "@typescript-eslint/parser": "5.37.0",
    "babel-jest": "28.1.0",
    "cross-env": "7.0.3",
    "eslint": "8.23.1",
    "eslint-import-resolver-typescript": "3.5.1",
    "eslint-plugin-import": "2.26.0",
    "jest": "28.1.0",
    "jest-config": "28.1.0",
    "prettier": "2.7.1",
    "rollup": "2.72.1",
    "rollup-plugin-copy": "3.4.0",
    "rollup-plugin-delete": "2.0.0",
    "rollup-plugin-dts": "4.2.1",
    "rollup-plugin-filesize": "9.1.2",
    "rollup-plugin-generate-package-json": "3.2.0",
    "rollup-plugin-peer-deps-external": "2.2.4",
    "rollup-plugin-postcss": "4.0.2",
    "rollup-plugin-terser": "7.0.2",
    "ts-jest": "28.0.2",
    "typescript": "4.6.4",
    "typescript-plugin-css-modules": "3.4.0"
  },
  "peerDependencies": {
    "classnames": ">=2.3.0",
    "react": ">=16.8.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
